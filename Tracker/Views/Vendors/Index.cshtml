@using Tracker.Models;
@{
    Layout = "_Layout";
}

<div class="container">
    <h2>Your Vendors</h2>
    @if (@Model.Count == 0)
    {
        <h3>You must add vendors first to view your list.</h3>
    }
    @foreach (Vendor vendors in Model)
    {
        <h3><a href="/vendors/@vendors.Id">@vendors.Name</a><br>
        Vendor description: @vendors.Description</h3>
    }
    <p><a href="/">Back to home page</a></p>
</div>