@using Tracker.Models;
@{
    Layout = "_Layout";
}

<h1>Your Vendors</h1>

@if (@Model.Count == 0)
{
    <h3>You must add vendors first to view your list.</h3>
}

@foreach (Vendor vendors in Model)
{
    <h3><a href="/vendors/@vendors.Id">@vendors.Name</a>Vendor description: @vendors.Description</h3>
}

<p><a href="/">Back to home page</a></p>